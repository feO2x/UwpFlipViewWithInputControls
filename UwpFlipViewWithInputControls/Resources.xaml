<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="ButtonStyle" TargetType="Button">
        <Setter Property="Margin" Value="0 12 24 12"/>
    </Style>
    
    <Style x:Key="InputControlStyle" TargetType="FrameworkElement">
        <Setter Property="Margin" Value="16 12 16 32" />
        <Setter Property="MinWidth" Value="200" />
    </Style>

    <Style x:Key="OverlayBorderStyle" TargetType="Border">
        <Setter Property="Background" Value="#CC000000" />
        <Setter Property="Padding" Value="16 12" />
    </Style>

    <Style x:Key="OverlayTextStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="White" />
        <Setter Property="TextAlignment" Value="Center" />
        <Setter Property="FontSize" Value="20" />
        <Setter Property="TextWrapping" Value="Wrap" />
    </Style>

</ResourceDictionary>